<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".FormulaireActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_right_previous_ic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_upon_dashboard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.16" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Sélectionnez une option :"
            android:textColor="#D7575A5A"


            android:textSize="16sp"
            android:textStyle="normal|italic"
            app:layout_constraintEnd_toStartOf="@+id/ver_right_ic_next"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/vertical_right_previous_ic"
            app:layout_constraintTop_toTopOf="@+id/hor_under_profile2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_under_profile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.62" />

        <TextView
            android:id="@+id/terminer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Terminer"
            android:textColor="#ffffff"
            android:textSize="@dimen/normal"
            android:textStyle="bold"
            android:background="@drawable/button_bg"
            app:layout_constraintBottom_toTopOf="@id/hor_under_create_button"
            app:layout_constraintEnd_toStartOf="@+id/vertical_right_activity"
            app:layout_constraintStart_toStartOf="@+id/vertical_left_designs"
            app:layout_constraintTop_toBottomOf="@id/hor_upon_create_button"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_left_logo_profile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_left_button_addMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_right_ic_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.88" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_right_button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.38" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_right_previous_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_left_logo_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

        <ImageView
            android:id="@+id/ic_previous"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toTopOf="@+id/hor_under_create_button"
            app:layout_constraintEnd_toStartOf="@+id/vertical_right_previous_ic"
            app:layout_constraintStart_toStartOf="@+id/vertical_left_activity"
            app:layout_constraintTop_toTopOf="@+id/hor_upon_create_button"
            app:srcCompat="@drawable/ic_back"></ImageView>

        <TextView
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Previous"
            android:textColor="#014979"
            android:textSize="@dimen/normal"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@id/hor_under_create_button"
            app:layout_constraintEnd_toStartOf="@+id/ver_right_button_previous"
            app:layout_constraintStart_toStartOf="@+id/vertical_left_activity"
            app:layout_constraintTop_toBottomOf="@id/hor_upon_create_button"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_under_second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.76" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_upon_second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.68" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_under_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.54" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Corona Test Questions ! "
            android:textColor="#014979"
            android:textSize="18sp"
            android:visibility="invisible"

            android:textStyle="normal|italic"
            app:layout_constraintBottom_toTopOf="@+id/hor_under_profile"
            app:layout_constraintEnd_toStartOf="@+id/ver_right_ic_next"
            app:layout_constraintStart_toStartOf="@+id/vertical_right_previous_ic"
            app:layout_constraintTop_toTopOf="@+id/hor_upon_fieldsRequired"
            app:layout_constraintVertical_bias="0.405" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_left_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.31" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_right_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_upon_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_upon_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.26" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_upon_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.89" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_under_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.97" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_left_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_right_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_left_designs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.604" />




        <ImageView
            android:id="@+id/logo"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"


            android:scaleType="fitStart"
            android:src="@drawable/app_logo"
            app:layout_constraintBottom_toTopOf="@+id/hor_uder_logo"
            app:layout_constraintEnd_toStartOf="@+id/ver_right_logo"
            app:layout_constraintStart_toStartOf="@+id/ver_left_logo"
            app:layout_constraintTop_toTopOf="@+id/hor_upon_logo"
            app:layout_constraintVertical_bias="0.0" />


        <TextView

            android:id="@+id/questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question N° 1"
            android:textColor="#014979"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hor_upon_fieldsRequired"


            app:layout_constraintLeft_toRightOf="@id/vertical_left_activity"
            app:layout_constraintTop_toBottomOf="@id/hor_upon_dashboard"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button_bg"


            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Next"

            android:textColor="#ffffff"
            android:textSize="@dimen/normal"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/hor_under_create_button"


            app:layout_constraintEnd_toStartOf="@+id/vertical_right_activity"

            app:layout_constraintStart_toStartOf="@+id/vertical_left_designs"
            app:layout_constraintTop_toBottomOf="@id/hor_upon_create_button" />


        <ImageView
            android:id="@+id/ic_go_next"
            android:layout_width="0dp"

            android:layout_height="0dp"


            app:layout_constraintBottom_toBottomOf="@+id/next"
            app:layout_constraintEnd_toStartOf="@+id/ver_right_ic_next"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ver_left_logo_profile"
            app:layout_constraintTop_toTopOf="@+id/hor_upon_create_button"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_go_light" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_right_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.26" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_uder_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_upon_fieldsRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.31" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/hor_under_second_line"
            app:layout_constraintEnd_toStartOf="@+id/ver_left_logo_profile2"
            app:layout_constraintStart_toStartOf="@+id/ver_right_toggle"
            app:layout_constraintTop_toTopOf="@+id/hor_upon_second_line">

            <RadioButton
                android:id="@+id/radio_oui"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="#014979"
                android:text="Oui"
                android:textColor="#014979"
                android:textSize="18sp"
                android:onClick="checkButton"
                />

            <RadioButton
                android:id="@+id/radio_non"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="#014979"
                android:text="Non"
                android:textColor="#014979"
                android:textSize="18sp"
                android:onClick="checkButton"
                />
        </RadioGroup>


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress"
            app:layout_constraintBottom_toTopOf="@+id/hor_under_profile"
            app:layout_constraintEnd_toStartOf="@+id/ver_right_ic_next"
            app:layout_constraintStart_toStartOf="@+id/vertical_right_previous_ic"
            app:layout_constraintTop_toTopOf="@+id/hor_upon_fieldsRequired" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tester les symptomes du Virus"
            android:textColor="#014979"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/vertical_right_activity"
            app:layout_constraintStart_toStartOf="@+id/vertical_left_activity"
            app:layout_constraintTop_toTopOf="@+id/hor_upon_dashboard2" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="15"
            android:progress="7"
            android:progressDrawable="@drawable/track"
            android:thumb="@drawable/thumb"
            app:layout_constraintEnd_toStartOf="@+id/ver_left_logo_profile2"
            app:layout_constraintStart_toStartOf="@+id/vertical_right_previous_ic"
            app:layout_constraintTop_toTopOf="@+id/hor_upon_second_line" />

        <TextView
            android:id="@+id/textViewSeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="XX"
            android:textColor="#014979"
            android:textSize="26sp"
            app:layout_constraintEnd_toStartOf="@+id/vertical_left_designs"
            app:layout_constraintStart_toStartOf="@+id/vertical_left_button_addMore"
            app:layout_constraintTop_toTopOf="@+id/hor_under_second_line" />

        <TextView
            android:id="@+id/celsus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="°C"
            android:textColor="#014979"
            android:textSize="26sp"
            app:layout_constraintEnd_toStartOf="@+id/ver_right_logo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/vertical_left_designs"
            app:layout_constraintTop_toTopOf="@+id/hor_under_second_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--app:itemBackground="@color/colorPrimaryDark"-->
