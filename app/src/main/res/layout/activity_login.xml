<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    <include
            layout="@layout/logo_layout"
            android:id="@+id/include"
            android:layout_width="187dp" android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="@+id/credentialHolder"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"/>

    <include
            layout="@layout/credential_holders"
            android:id="@+id/credentialHolder"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/login"
            android:enabled="true"
            android:layout_width="121dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:text="@string/action_log_in"
            android:background="#FF5722"
            android:textColor="#ffffff"
            android:textSize="24sp" android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@+id/rememberMe" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>
    <CheckBox
            android:text="Remember me"
            android:layout_width="143dp"
            android:layout_height="31dp"
            android:id="@+id/rememberMe"

            android:checked="true"
            app:layout_constraintEnd_toEndOf="@+id/credentialHolder"
            app:layout_constraintTop_toBottomOf="@+id/credentialHolder"
            android:layout_marginTop="10dp"/>
    <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/credentialHolder"
            app:layout_constraintStart_toStartOf="@+id/credentialHolder"
            style="@style/Widget.AppCompat.ProgressBar" android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/signIn"
            app:layout_constraintTop_toBottomOf="@+id/credentialHolder"/>
    <Button
            android:id="@+id/signIn"
            android:enabled="true"
            android:layout_width="121dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:text="@string/action_sign_in"
            android:background="#00BCD4"
            android:textColor="#ffffff"
            android:textSize="24sp" android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="50dp" android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/login" app:layout_constraintTop_toTopOf="@+id/login"/>
    <TextView
            android:text="@string/be_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/include"
            android:textSize="24sp" android:textColor="#2196F3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            android:fontFamily="sans-serif-smallcaps"/>
    <TextView
            android:text="@string/stay_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#FF5722" android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/include" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="30dp" android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
            android:fontFamily="sans-serif-smallcaps"/>


</androidx.constraintlayout.widget.ConstraintLayout>
