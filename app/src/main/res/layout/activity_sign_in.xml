<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/imageView2"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"


        app:layout_constraintBottom_toTopOf="@+id/hor_under_first_line"
        app:layout_constraintEnd_toStartOf="@+id/ver_left_logo"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@+id/password2"
        app:layout_constraintTop_toTopOf="@+id/hor_upon_first_line"
        app:srcCompat="@drawable/ic_password_logo" />

    <EditText
        android:id="@+id/passwordConfirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_text_bg"
        android:gravity="center_vertical"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="60dp"
        android:textSize="@dimen/normal"
        app:layout_constraintBottom_toTopOf="@+id/hor_under_second_line"
        app:layout_constraintEnd_toStartOf="@+id/vertical_right_activity"
        app:layout_constraintStart_toStartOf="@+id/vertical_left_activity"
        app:layout_constraintTop_toTopOf="@+id/hor_upon_second_line" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/hor_under_profile"
        app:layout_constraintEnd_toStartOf="@+id/ver_left_logo"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/vertical_left_activity"
        app:layout_constraintTop_toTopOf="@+id/hor_upon_profile"
        app:srcCompat="@drawable/ic_username_logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_under_second_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_upon_second_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_text_bg"

        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="60dp"
        android:textSize="@dimen/normal"


        app:layout_constraintBottom_toTopOf="@+id/hor_under_first_line"
        app:layout_constraintEnd_toStartOf="@+id/vertical_right_activity"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_left_activity"
        app:layout_constraintTop_toTopOf="@+id/hor_upon_first_line"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"


        app:layout_constraintBottom_toTopOf="@+id/hor_under_second_line"
        app:layout_constraintEnd_toStartOf="@+id/ver_left_logo"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@+id/password2"
        app:layout_constraintTop_toTopOf="@+id/hor_upon_second_line"
        app:srcCompat="@drawable/ic_password_logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_under_first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_upon_first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_under_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <TextView
        android:id="@+id/fill_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="*Veuillez remplir tous les champs"

        android:textColor="#014979"
        android:textSize="@dimen/normal"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@id/vertical_left_activity"


        app:layout_constraintTop_toTopOf="@+id/hor_upon_fieldsRequired" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver_left_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver_right_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_upon_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_upon_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_upon_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_under_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_left_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_right_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_left_designs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.604" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_upon_theme_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />



    <ImageView
        android:layout_width="0dp"

        android:layout_height="0dp"

        android:scaleType="fitStart"


        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/hor_uder_logo"
        app:layout_constraintEnd_toStartOf="@+id/ver_right_logo"
        app:layout_constraintStart_toStartOf="@+id/ver_left_logo"
        app:layout_constraintTop_toTopOf="@+id/hor_upon_logo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Apply_for_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Creer votre compte"
        android:textColor="#014979"

        android:textSize="@dimen/title"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/vertical_left_activity"
        app:layout_constraintTop_toBottomOf="@id/hor_upon_dashboard"


        />

    <EditText
        android:id="@+id/mail2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/edit_text_bg"
        android:gravity="center_vertical"
        android:hint="Email adress"
        android:inputType="text"
        android:paddingLeft="60dp"

        android:textSize="@dimen/normal"
        app:layout_constraintBottom_toTopOf="@+id/hor_under_profile"
        app:layout_constraintEnd_toStartOf="@+id/vertical_right_activity"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vertical_left_activity"
        app:layout_constraintTop_toTopOf="@+id/hor_upon_profile" />

    <Button
        android:id="@+id/buttonJoin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_bg"


        android:gravity="center"

        android:text="JOIN US"

        android:textColor="#ffffff"
        android:textSize="@dimen/normal"
        app:layout_constraintBottom_toTopOf="@id/hor_under_create_button"


        app:layout_constraintEnd_toStartOf="@+id/ver_right_logo"

        app:layout_constraintStart_toStartOf="@+id/ver_left_logo"
        app:layout_constraintTop_toBottomOf="@id/hor_upon_create_button" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:srcCompat="@drawable/ic_go_light"


        app:layout_constraintBottom_toTopOf="@+id/hor_under_create_button"
        app:layout_constraintEnd_toEndOf="@+id/design_2"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/design_2"
        app:layout_constraintTop_toTopOf="@+id/design_2"
        app:layout_constraintVertical_bias="0.52" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver_right_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="62dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_uder_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05882353" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_upon_fieldsRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_upon_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <ProgressBar
        android:id="@+id/progressBarSavingUser"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/ver_right_logo"
        app:layout_constraintStart_toStartOf="@+id/ver_left_logo"
        app:layout_constraintTop_toTopOf="@+id/hor_under_create_button" />


</androidx.constraintlayout.widget.ConstraintLayout>
